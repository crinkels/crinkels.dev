<ul
  role="list"
  aria-label="List of all tags"
  class="list-group list-group--scale | cluster --gap-00 items-center"
>
  {% for tag in tags %} {% set index = collections.posts | getTagIndex(tag) %}
  <li>
    <a
      href="/tags/{{ tag }}/"
      class="tag clickable no-decoration | size-00 | elevation-0"
      data-selected="{{ selected === tag }}"
      data-index="{{ index }}"
      >{{ tag }}</a
    >
  </li>
  {% endfor %}
</ul>
