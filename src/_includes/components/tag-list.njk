

<ul role="list" class="list-group list-group--scale | cluster items-center --gap-00">
  {% for tag in tags %}
    {% set index = collections.posts | getTagIndex(tag) %}
    <li class="tag | click-area | size-00" data-selected="{{ selected === tag }}" data-index="{{ index }}"><a href="/tags/{{ tag }}/">{{ tag }}</a></li>
  {% endfor %}
</ul>