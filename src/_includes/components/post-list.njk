{% set latest = collections.posts | index(0) %}
<ul role="list" class="post-list | hover-group | flex --column --gap-3">
  {% for post in posts %}
    <li class="flex --column --gap-none --start | click-area" role="listitem">
      <span class="size-1 bold">
        <a href="{{ post.page.url }}">
          {{ post.data.title }}
        </a>
      </span>
      <span class="italic text-2 size-00 | flex --row | mb-000">
        <time class="mr-00" date="{{ post.data.date }}">{{ post.data.date | readableDate }}</time>
        {# {% if latest.data.title === post.data.title %} <span class="flag">new! ðŸ¤¯</span> {% endif %} #}
        {% if post.data.update %} <span class="flag size-00">updated!</span> {%  endif %}
        </span>
      </span>
      <span class="text-1">{{ post.data.description }}</span>
    </li>
  {% endfor %}
</ul>
