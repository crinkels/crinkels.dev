<ul role="list" class="hover-group | flex --column --gap-4 | maxw-3" style="--hover-grow: 1.05;">
  {% for post in posts %}
    <li class="flex --column --gap-none | click-area" role="listitem">
      <h3 class="size-1 bold">
        <a href="{{ post.page.url }}">
          {{ post.data.title }}
        </a>
      </h3>
      <span class="italic text-2 size-00 | flex --row | mb-000">
        <time class="mr-00" date="{{ post.data.date }}">{{ post.data.date | readableDate }}</time>
        {% if post.data.update %} <span class="tag size-00">updated!</span> {% endif %}
        {% if post.data.link %} <span class="tag size-00">external</span> {% endif %}
      </span>
      <span class="text-1">{{ post.data.description }}</span>
    </li>
  {% endfor %}
</ul>
