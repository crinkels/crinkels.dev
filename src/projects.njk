---
title: My work
layout: layouts/page.njk
eleventyExcludeFromCollections: true
---

<main class="list-group | mt-3 flex-grow">
  {% for tech, techProjects in projects | groupByTech %}
    <div class="sidebar-l sidebar-w-000 sidebar-c-70 | gap-0 mb-1 pb-1 separator">
      <span class="text-primary">{{ tech }}</span>
      <div class="list-group | stack" role="list">
        {% for project in techProjects %}
          <div class="flex-col click-area" role="listitem">
            <span class="slash | text-00 text-fg-1">{{ project.type }}</span>
            <h2 class="text-1 lh-1">
              <a href="{{ project.href }}" class="bold no-decoration">
                {{ project.title }}
              </a>
            </h2>
            <span class="text-fg-1">{{ project.description }}</span>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</main>