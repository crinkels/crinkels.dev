---
title: My work
layout: layouts/page.njk
eleventyExcludeFromCollections: true
---

<ul role="list" class="flex-col --gap-3 | list-group | flex-grow | fade-in">
  {% for type, projects in projects | groupby("type") %}
  <li>
    <h2 class="text-color-primary uppercase mb-0">{{ type }}</h2>
    <ul role="list" class="tiles --width-00 --gap-0 | list-group | flex-col --gap-0" role="list">
      {% for project in projects %}
      <li class="card | flex-col --gap-000 elevation-0 | click-area" role="listitem">
        <h3 class="size-0">
          <a href="{{ project.href }}" class="bold"> {{ project.title }} </a>
        </h3>
        <p class="size-00 flex-grow">{{ project.description }}</p>
        <span class="self-start text-color-1 size-00"><span class="text-color-secondary">#</span>{{ project.tech }}</span>
      </li>
      {% endfor %}
    </ul>
  </li>
  {% endfor %}
</ul>
