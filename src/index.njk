layout: layouts/page.njk
width: 5
---

<div class="flex-col --gap-none | maxw-3 mb-3">
  <p class="text-primary uppercase lh-1">Hello, my name is Kevin</p>
  <h1 class="size-3">Web tinkerer.</h1>
  <p class="size-1 mt-000">I am a software engineer, CSS lover, and <a href="/writing">writer</a>. This is my digital playground & corner of the internet.</p>
</div>
<div class="flex-col --gap-0">
  <div class="sidebar --left --width-0 --gap-5 items-start">
    <aside class="flex-col --gap-000" aria-label="Top tags on the site">
      <span class="text-2">Search by topic..</span>
      {% set tags = collections.posts | getAllTags | head(5) %}
      {% include "components/tag-list.njk" %}
      <a href="/tag-list" class="size-00 redirect self-start">all topics</a>
    </aside>

    <section class="flex-col --gap-5">
      {% set posts =  collections.posts | head(5) %}
      {% include "components/post-list.njk" %}
      <a href="/writing" class="redirect self-end">See all articles</a>
    </section>
  </div>
</div>
