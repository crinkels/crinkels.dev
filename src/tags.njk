---
layout: layouts/page.njk
eleventyExcludeFromCollections: true
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - writing
permalink: /tags/{{ tag | slugify }}/
eleventyComputed:
  title: Tagged “{{ tag }}”
---

{% set selected = tag[0] %}
<div class="flex-col items-start">
  <aside class="flex-col --gap-000 mb-2">
    {% set tags = collections.posts | getAllTags | head(5) %}
    {% include "components/tag-list.njk" %}
    <a href="/tag-list" class="size-00 redirect self-start text-1">all topics</a>
  </aside>
  {% set posts = collections[ tag ] | reverse or [] %}
  {% include "components/post-list.njk" %}
</div>
