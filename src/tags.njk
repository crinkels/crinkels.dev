---
layout: layouts/page.njk
eleventyExcludeFromCollections: true
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - writing
permalink: /tags/{{ tag | slugify }}/
eleventyComputed:
  title: Tagged “{{ tag }}”
---

{% set tags = collections.writing | getAllTags | head(5) %}
{% set selected = tag %}
<div class="cluster --gap-0 items-center">
  {% include "components/tag-list.njk" %}
  <a href="/tag-list" class="size-00 redirect">all topics</a>
</div>
{% set posts = collections[ tag ] or [] %}
{% include "components/post-list.njk" %}