<!DOCTYPE html>
<html lang="{{ metadata.language }}">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{{ title or metadata.title }} â€¢ Crinkles</title>
        <link rel="stylesheet" href="{{ '/styles/index.css' | url }}">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
        <meta name="generator" content="Eleventy" />
        <meta name="color-scheme" content="light dark" />
        <meta name="theme-color" media="(prefers-color-scheme: light)" content="#f9fafb">
        <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#1B1E22">
        <meta name="view-transition" content="same-origin">
        <!-- assets -->
        <link rel="icon" href="/favicon.ico" sizes="any">
        <link rel="icon" href="/favicon.svg" type="image/svg+xml">
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="manifest" href="/site.webmanifest">
        <!-- links -->
        <link rel="canonical" href="{{ metadata.url }}">
        <link rel="me" href="https://indieweb.social/@crinkles">
        <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
        <!-- page data -->
        <meta name="description" content="{{ description or metadata.description }}">
        <meta name="keywords" content="{{ metadata.keywords }}">
        <meta name="content" content="{{ metadata.keywords }}">
        <meta name="property" content="{{ metadata.keywords }}">
        <!-- OG -->
        <meta property="og:site_name" content="{{ metadata.site }}">
        <meta property="og:url" content="{{ metadata.url }}">
        <meta property="og:title" content="{{ title or metadata.title }}">
        <meta property="og:description" content="{{ description or metadata.description }}">
        <meta property="og:image" content="{{ metadata.social.img }}">
    </head>

    <body>
        <div class="canvas"></div>
        {% include "partials/header.njk" %}
        {{ content | safe }}
        {% include "partials/footer.njk" %}
    </body>
    <script async src="/js/script.js"></script>
</html>

<!-- outputs all the icons used on the page -->
{% getBundle "fontawesome" %}
