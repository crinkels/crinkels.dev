---
layout: base
---

<section class="post | mb-2">
    <article class="center">
        <div class="flex --column">
            <h1 class="text-center">{{ title }}</h1>
            <div class="flex --row --gap-1 | size-00">
                <time class=" text-2 italic">{{ date | readableDate }}</time>
                <span class="flag">external</span>
                {% include "components/tag-list.njk" %}
            </div>
        </div>
        {{ content | safe }}
        <a href="{{ link }}" alt="{{ alt }}" target="_blank" class="redirect">Check it out</a>
    </article>
</section>

{% set older = collections.posts | getNextCollectionItem(page) %}
{% set newer = collections.posts | getPreviousCollectionItem(page) %}

