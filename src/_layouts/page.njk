---
layout: base
---
{% if title %}
  <section class="banner"> 
    <div class="center --threshold-{{ width }}">
      <span class="size-1 bold text-primary italic lowercase">&lt;{{ description }} /&gt;</span>
      <h1>{{ title }}</h1>
    </div>
  </section>
{% endif %}

<main class="center --threshold-{{ width or 4 }} | mb-4">
  {{ content | safe }}
</main>
